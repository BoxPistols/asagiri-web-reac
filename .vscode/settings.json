{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "windicss.enableEmmetCompletion": true,
  "tailwindCSS.emmetCompletions": true,
  "auto-close-tag.insertSpaceBeforeSelfClosingTag": true,
  // "csscomb.preset": "yandex",
  "csscomb.preset": ".csscomb.json",
  "csscomb.formatOnSave": true,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": true,
  "files.exclude": {
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "editor.formatOnSave": true,
  "typescript.format.insertSpaceAfterTypeAssertion": true,
  "workbench.colorCustomizations": {
    "activityBar.background": "#097c41",
    "titleBar.activeBackground": "#2f9045",
    "titleBar.activeForeground": "#FDFCFE"
  },
}